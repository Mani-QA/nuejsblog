{
  // Basic project information
  "name": "nuejs", // TODO: Change to your project's name
  "version": "0.1.0",
  "private": true, // Keeps the package private, preventing accidental publishing
  "description": "A web project built with Nue JS", // TODO: Add a brief description
  "type": "module", // Enables ES Module syntax (recommended for Nue JS)

  // Scripts for common development tasks
  "scripts": {
    // Start the Nuekit development server (usually with hot-reloading)
    // '--watch' enables watching for file changes
    "dev": "nuekit --serve --watch",

    // Create an optimized production build (static files)
    // '--production' and '--minify' enable optimizations
    "build": "nuekit --build --production --minify",

    // Preview the production build locally
    // '--root' points to the build output directory (default is often .nue/dist)
    // TODO: Adjust '--root .nue/dist' if your build output directory is different (e.g., 'dist')
    "preview": "nuekit --serve --root .nue/dist",

    // Optional: Lint your code (requires setting up ESLint)
    // "lint": "eslint . --ext .js,.nue",

    // Optional: Format your code (requires setting up Prettier)
    // "format": "prettier --write ."
  },

  // Runtime Dependencies: Packages needed by the deployed application
  "dependencies": {
    // For static sites generated by `npm run build`, this section is often EMPTY.
    // Nue aims for minimal client-side JS.
    // Only add packages here if your *live application* needs them at runtime.
    // Example: If using Nue's server features in production:
    // "@nue/server": "latest"
  },

  // Development Dependencies: Tools needed for building, developing, linting, etc.
  "devDependencies": {
    // The core Nue JS toolkit for development and building
    "nuekit": "latest", // Installs the latest version of nuekit

    // --- Optional Development Tools ---
    // Uncomment and install (`npm install <package> --save-dev`) if needed

    // Linting tools
    // "eslint": "latest",
    // "eslint-plugin-html": "latest", // Useful for linting <script> tags in .nue/.html

    // Formatting tool
    // "prettier": "latest",

    // TypeScript support (if using TS in your project)
    // "typescript": "latest"
  }

  // --- Optional Configurations ---
  // You can add basic configs for tools like ESLint or Prettier here,
  // or use separate configuration files (e.g., .eslintrc.json, .prettierrc.js)

  // "eslintConfig": { /* ... ESLint rules ... */ },
  // "prettier": { /* ... Prettier rules ... */ }
}
